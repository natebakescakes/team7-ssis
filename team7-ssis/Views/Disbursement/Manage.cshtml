@{
    ViewBag.Title = "Manage Disbursement Forms";
}

<h3>View Disbursement Forms</h3>

<table id="myTable" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>Disbursement ID</th>
            <th>Retrieval ID</th>
            <th>Department</th>
            <th>Created Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>

</table>

<script>
    $(document).ready(function () {
        var oTable = $('#myTable').DataTable({
            ajax: {
                url: "/api/disbursement",
                dataSrc: ""
            },
            order: [[0, 'desc']],
            columns: [
                {
                    "data": "DisbursementId",
                    "autoWidth": true,
                    "render": function (data, type, row, meta) {
                        var html =
                            '<a href="/Disbursement/DisbursementDetails?did=' + data + '">' + data +
                            '</a>';
                        return html;
                    }
                },
                {
                    "data": "RetrievalId",
                    "autoWidth": true,
                    "render": function (data, type, row, meta) {
                        var html =
                            '<a href="/Requisition/StationeryRetrieval?rid=' + data + '">' + data +
                            '</a>';
                        return html;
                    }
                },
                { "data": "Department", "autoWidth": true },
                { "data": "CreatedDate", "autoWidth": true },
                { "data": "Status", "autoWidth": true },
                {
                    "render": function (data, type, row, meta) {
                        console.log(row);
                        var html =
                            '<a class="btn btn-secondary" href="/Disbursement/DisbursementDetails?did=' + row.DisbursementId + '">' +
                            '<i class="fa fa-info-circle" aria-hidden="true"></i>' +
                            '</a>';
                        return html;
                    }
                }
            ],
            select: "api"
        });
    })

</script>
