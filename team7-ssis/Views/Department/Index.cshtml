
@{
    ViewBag.Title = "Index";
}
<div class="row mb-3">
    <div class="col-md-8">
        <h2>Departments</h2>
    </div>
    <div class="col-md-4">
        <button class="popup btn btn-primary pull-right" value="Save" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus" aria-hidden="true"></i> Create New Department</button>
    </div>
</div>
<br /><br />

@Html.Partial("_DepartmentTable")
<br />

<div class="collapse">

    @Html.Partial("_DepartmentDetail")

</div>

<div class="container-fluid">
    @Html.Partial("_AddDepartment")
    <br />
</div>



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/custom/department.js")
}

