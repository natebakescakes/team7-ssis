@using team7_ssis.Models
@using team7_ssis.ViewModels
@model team7_ssis.ViewModels.DepartmentViewModel



@{
    ViewBag.Title = "Department Options";
}
<h2>@ViewBag.Title</h2>




<!DOCTYPE html>
<!-- template from http://getbootstrap.com/getting-started -->

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style type="text/css">
        div {
            margin: 10px;
        }

        label {
            display: inline-block;
            width: 100px;
        }

        input[type="text"] {
            box-sizing: border-box;
            width: 200px;
        }

        select {
            width: 200px;
        }

        input[type="submit"] {
            margin-left: 115px;
        }

        .field-validation-error {
            display: block;
            margin-left: 110px;
            color: #ff0000;
        }
    </style>
</head>

<body>


    @using (Html.BeginForm())
    {
        <div>
            @Html.LabelFor(m => m.SelectedCollectionPoint)
            @Html.DropDownListFor(m => m.SelectedCollectionPoint, Model.collectionPointList)
        </div>
        <div>
            @Html.LabelFor(m => m.SelectedRepresentative)
            @Html.DropDownListFor(m => m.SelectedRepresentative, Model.usersByDepartmentList)
        </div>
        <div>
            @Html.LabelFor(m => m.SelectedManager)
            @Html.DropDownListFor(m => m.SelectedManager, Model.usersByDepartmentList)
           
        </div>

        <input type="submit" value="save" />
    }


    <!-- JS includes -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">


    </script>
</body>
</html>

