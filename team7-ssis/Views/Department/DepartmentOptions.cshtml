@model team7_ssis.ViewModels.DepartmentViewModel


@{
    ViewBag.Title = "DepartmentOptions";
}

@using (Html.BeginForm("SaveOptions", "Department", FormMethod.Post, new { @id = "departmentoptions", role = "form" }))
{
    <br />
    <div class="col-sm-3">
        <div class="form-group">
            <label for="CollectionPoint">Collection Point</label><br />
            @Html.DropDownListFor(m => m.CollectionPoint, new SelectList(Model.CollectionPoints, "Value", "Text"), Model.CollectionPoint ,new { @class = "form-control" })
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <label for="DepartmentRepresentative">Department Representative</label><br />
            @Html.DropDownListFor(m => m.DepartmentRep, new SelectList(Model.UsersByDepartment, "Value", "Text"), Model.DepartmentRep, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <label for="DelegationRecepient">Delegate Manager</label><br />
            @Html.DropDownListFor(m => m.DelegationRecipient, new SelectList(Model.UsersByDepartment, "Value", "Text"), "--Select Recipient--", new { @class = "form-control" })
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <label for="StartDate">Start Date</label>
            @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "form-control date-picker" }, id = "Startdate" })
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            <label for="EndDate">End Date</label>
            @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "form-control date-picker" }, id = "Enddate" })
        </div>
    </div>
    <div class="row button-set ">
        <div class="col-sm-1"></div>
        <div class="col-lg-6">
            <a id="cancel-btn" class="btn btn-danger"> Cancel</a>
            <button id="submit" type="submit" class="btn btn-success"> Save</button>
        </div>
    </div>
    <br /><br />

}
<div style="width:90%; margin:0 auto" class="container">
    <table id="delgTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Recipient</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/custom/department.js")
}
