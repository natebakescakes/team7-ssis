
@{
    ViewBag.Title = "Manage Retrieval Forms";
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.Success
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h3>View Retrieval Forms</h3>

<table id="myTable" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>Retrieval ID</th>
            <th>Created By</th>
            <th>Created Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
</table>

<script>
    $(document).ready(function () {
        var myTable = $('#myTable').DataTable({
            ajax: {
                url: "/api/retrieval",
                dataSrc: ""
            },
            order: [[0, 'desc']],
            columns: [
                {
                    "data": "RetrievalId",
                    "autoWidth": true,
                    "render": function (data, type, row, meta) {
                        console.log(row);
                        var html =
                            '<a href="/Requisition/StationeryRetrieval?rid=' + data + '">' + data +
                            '</a>';
                        return html;
                    }
                },
                { "data": "CreatedBy", "autoWidth": true },
                { "data": "CreatedDate", "autoWidth": true },
                { "data": "Status", "autoWidth": true },
                {
                    "render": function (data, type, row, meta) {
                        console.log(row);
                        var html =
                            '<a class="btn btn-secondary" href="/Requisition/StationeryRetrieval?rid=' + row.RetrievalId + '">' +
                            '<i class="fa fa-info-circle" aria-hidden="true"></i>' +
                            '</a>';
                        return html;
                    }
                }
            ],
            select: "api"
        });
    })

</script>
