@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

    <script src="https://cdn.datatables.net/select/1.2.6/js/dataTables.select.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.19/pagination/simple_incremental_bootstrap.js"></script>

    @*<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />*@
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-primary">
        <div class="navbar-header">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("Stationery Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">@Html.ActionLink("View Catalogue", "Index", "Home", null, new { @class = "nav-link" })</li>
                }
                @if (User.IsInRole("Employee") || User.IsInRole("Department Head") || User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Requisitions</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            @Html.ActionLink("Manage Requisitions", "Index", "Requisition", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item">@Html.ActionLink("View Catalogue", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Department Options", "Index", "Home", null, new { @class = "nav-link" })</li>
                }
                @if (User.IsInRole("Store Clerk") || User.IsInRole("Store Supervisor") || User.IsInRole("Store Manager") || User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown02" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Requisitions</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown02">
                            @Html.ActionLink("Outstanding Requisitions", "Index", "Requisition", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Manage Requisitions", "Index", "Requisition", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Inventory</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown03">
                            @Html.ActionLink("Make Stock Adjustment", "Index", "Home", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("View Inventory Shortfall", "Index", "Home", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Receive Goods", "Index", "Home", null, new { @class = "dropdown-item" })
                            <hr />
                            @Html.ActionLink("Manage Inventory", "Index", "Inventory", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Manage Item Categories", "Index", "Home", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Manage Stock Adjustments", "Index", "Home", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Suppliers", "Index", "Supplier", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Departments", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Forms</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown04">
                            @Html.ActionLink("View Stationery Retrieval Forms", "Index", "Home", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("View Disbursement Forms", "Index", "Home", null, new { @class = "dropdown-item" })
                            <hr />
                            @Html.ActionLink("Manage Purchase Orders", "Index", "Home", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Generate Purchase Order Form", "Index", "Home", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Reports", "Index", "Home", null, new { @class = "nav-link" })</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <main role="main">
        <div class="container">
            <div class="row" style="height: 40px;"></div>
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </main>
    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Custom/Notification.js")

    @*For jQuery Validation*@
    @RenderSection("scripts", required: false)
    
</body>
</html>
