@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.0/js/bootstrap-select.min.js"></script>
    <script src="~/Scripts/Custom/DeliveryOrder.js"></script>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="~/Content/Site.css">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.0/css/bootstrap" />

@model team7_ssis.ViewModels.PurchaseOrderViewModel


<!DOCTYPE html>
<html>

<body>
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Receive Goods</h2>
        </div>
    </div>
    @Html.Hidden("poNo", Model.PurchaseOrderNo)
    <div style="width:90%; margin:0 auto" class="tablecontainer">

        <h4>Submit delivery order forms & invoices and update inventory</h4>
        <div class="col-md-12">
            @if (Model.Status != "Awaiting Delivery" && Model.Status != "Delivered")

            {

                <a id="VRDObtn" class="popup btn btn-primary pull-right"><i class="fa fa-search" aria-hidden="true"></i>  View Related Delivery Orders</a>

            }
        </div>
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <td>Purchase Order #</td>
                    <td> Supplier Name</td>
                    <td>Order Date</td>
                </tr>
            </thead>
            <tr>
                <td>@Html.DisplayFor(model => model.PurchaseOrderNo)</td>
                <td>@Html.DisplayFor(model => model.SupplierName)</td>
                <td>@Html.DisplayFor(model => model.CreatedDate)</td>
            </tr>
        </table>

        <button id="Viewbtn" class="btn btn-default mb-3" style="background-color:royalblue;">View Purchase Order Details</button>
    </div>

    <br />
    <hr />
    <br />

    @Html.Partial("_OutstandingItemsTable")

    <br />
    <h4><b>Submit forms to Bursar</b></h4>
    Forms will be routed to Bursar's department for payment to vendor
    <div class="label">
        <table>
            <tr>
                <td>Upload Delivery Order</td>
                <td>
                    <input type="file" name="DeliveryOrderFileName" id="DeliveryOrderFileName" />
                </td>
            </tr>
            <tr>
                <td>Upload Invoice</td>
                <td>
                    <input type="file" name="InvoiceFileName" id="InvoiceFileName" />
                </td>
            </tr>
        </table>
    </div>

    <br />
    <br />

    <div class="row mt-3">
        <div class="col-md-12">
            <table>
                <tr>
                    <td>
                        <div>
                            <button id="submitbtn" type="button" class="btn btn-default pull-right" style="background-color:royalblue;">Submit Delivery Order</button>
                        </div>
                    </td>
                    <td>
                        @using (Html.BeginForm("Index", "DeliveryOrder"))
                        {
                            <input type="submit" value="Back To Receive Goods" class="btn btn-default" style="background-color:royalblue;" />
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>



</body>
</html>






