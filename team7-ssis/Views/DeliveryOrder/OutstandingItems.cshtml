@section styles {

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/select/1.2.6/js/dataTables.select.min.js"></script>
    |}


@{
    ViewBag.Title = "OutstandingItems";
}
    <div style="width:90%; margin:0 auto" class="tablecontainer">
        <table>
            <tr>
                <td>Receive Goods</td>
                <td><a runat="server" class="popup btn btn-primary" href="~/Views/DeliveryOrder/ReceiveGoods" style="margin-bottom:20px; margin-top:20px;">View Related Delivery Orders</a></td>
            </tr>
            <tr>
                <td>Submit deliver order forms & invoices and update inventory</td>
            </tr>
        </table>
    </div>

    <div style="width:90%; margin:0 auto" class="tablecontainer">
        <table id="myOutstandingTable">

            <thead>

                <tr>

                    <th>Item Code</th>

                    <th>Description</th>

                    <th>Outstanding Qty</th>

                    <th>Received Qty</th>

                    <th>Remaining Qty</th>

                    <th>Cancel?</th>

                </tr>

            </thead>

        </table>

    </div>


    <script>

        $(document).ready(function () {

            var oTable = $('#myTable').DataTable({

                "ajax": {

                    "url": '@Url.Action("loaddata", "Inventory")',

                    "type": "get",

                    "datatype": "json"

                },

                "columns": [

                    { "data": "BookID", "autoWidth": true},

                    { "data": "Title", "autoWidth": true },

                    { "data": "CategoryID", "autoWidth": true },

                    { "data": "ISBN", "autoWidth": true },

                    { "data": "Author", "autoWidth": true },

                    { "data": "Stock", "autoWidth": true },

                    { "data": "Price", "autoWidth": true },

                    {

                        "data": "BookID", "width": "50px", "orderable": false, "render": function (data) {

                            return '<a runat="server"class="popup btn btn-default" href="/Inventory/save/' + data + '">Edit</a>';

                            //return '<a class = "popup btn btn-default" onclick= "@Html.Action("save", "Inventory", new {id="3"})>Edit</a>'

                        }

                    },

                    {

                        "data": "BookID", "width": "50px", "orderable": false, "render": function (data) {

                            return '<a runat="server" class="popup btn btn-danger" href="/Inventory/delete/' + data + '">Delete</a>';

                        }

                    }

                ]



            });



            $('.tablecontainer').on('click', 'a.popup', function (e) {

                e.preventDefault();

                OpenPopup($(this).attr('href'));

            })



            function OpenPopup(pageUrl) {

                var $pageContent = $('<div/>');

                $pageContent.load(pageUrl, function () {

                    $('#popupForm', $pageContent).removeData('validator');

                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');

                    $.validator.unobtrusive.parse('form');



                });



                $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')

                    .html($pageContent)

                    .dialog({

                        draggable: false,

                        autoOpen: false,

                        resizable: false,

                        model: true,

                        height: 550,

                        width: 600,

                        close: function () {

                            $dialog.dialog('destroy').remove();

                            window.location.reload();

                        }

                    })





                $('.popupWindow').on('submit', '#popupForm', function (e) {

                    var url = $('#popupForm')[0].action;

                    $.ajax({

                        type: "POST",

                        url: url,

                        data: $('#popupForm').serialize(),

                        success: function (data) {

                            if (data.status) {

                                $dialog.dialog('close');

                                oTable.ajax.reload();

                            }

                        }

                    })



                    e.preventDefault();

                })

                $dialog.dialog('open');

            }





        })



    </script>

}





