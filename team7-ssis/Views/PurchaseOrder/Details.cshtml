
@model team7_ssis.ViewModels.PurchaseOrderViewModel

@{
    ViewBag.Title = "Details";
}

@section scripts {
    <script src="~/Scripts/Custom/PurchaseOrder.js"></script>
}
<div>
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Purchase Order Details</h2>
        </div>
        <div class="col-md-4">
            @Html.Hidden("purchaseOrderNo", Model.PurchaseOrderNo)
            @Html.Hidden("poStatus", Model.Status)
            @Html.Hidden("relDelOrdersUrl", Url.Action("", "DeliveryOrder"))
            @Html.Hidden("receiveGoodsUrl", Url.Action("", "DeliveryOrder"))

            @if (Model.Status != "Awaiting Delivery" && Model.Status != "Cancelled")
    {
        <a id="viewRelatedDel" class="popup btn btn-primary pull-right" href=""><i class="fa fa-search" aria-hidden="true"></i>  View Related Delivery Orders</a>
}

        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <div>Purchase Order # </div>
            <div>@Model.PurchaseOrderNo</div>
        </div>

        <div class="col-md-3">
            @*<div class="col-md-12">*@
            <div>Supplier Name</div>
            @Model.SupplierName
        </div>
        <div class="col-md-3">
            <div>Order Date</div>
            @Model.CreatedDate
        </div>

        <div class="col-md-3">
            <div>Status</div>
            @Model.Status
        </div>

    </div>
</div>



<div>
    @if(Model.Status == "Awaiting Delivery")
    {
        @Html.Partial("_PurchaseOrderDetailsAwaitingTable")
    }

    @if(Model.Status=="Partially Delivered" || Model.Status == "Delivered" || Model.Status == "Cancelled")
    {
        @Html.Partial("_PurchaseOrderDetailsTable")
    }

</div>
