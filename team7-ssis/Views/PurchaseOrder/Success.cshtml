
@{
    ViewBag.Title = "Success";
}


@section scripts {
    <script src="~/Scripts/Custom/GeneratePurchaseOrder.js"></script>
    
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>Successfully generated Purchase Order Form(s)</h2>

        @Html.Hidden("PONums", (string)ViewBag.poNums)
        @Html.Hidden("detailsUrl", Url.Action("details", "PurchaseOrder"))
    </div>

</div>


<button id="ViewPrintButton" class="btn btn-default mb-3"><i class="fa fa-print" aria-hidden="true"></i> View & Print All Generated Forms</button>
<br />
<button id="downloadselectedsuccess" class="btn btn-default mb-3"><i class="fa fa-download" aria-hidden="true"></i> Download Selected</button>

<table id="successPoTable" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>PO Number</th>
            <th>Supplier</th>
            <th></th>
        </tr>
    </thead>
</table>

<div class="row mt-3">
    <div class="col-md-12">
        <button id="successback" class="btn btn-primary">Back to Manage Purchase Orders</button>
    </div>
</div>


