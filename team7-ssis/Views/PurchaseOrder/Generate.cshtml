
@{
    ViewBag.Title = "Generate";
}

@section scripts {
    <script src="~/Scripts/Custom/GeneratePurchaseOrder.js"></script>
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>Generate Purchase Order Form(s)</h2>
    </div>

</div>

@Html.Hidden("successUrl", Url.Action("success", "PurchaseOrder"))
<button id="addItemButton" class="btn btn-default mb-3"><i class="fa fa-plus" aria-hidden="true"></i> Add Item</button>

<table id="generatePoTable" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>Item Code</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Supplier</th>
            <th>Amount</th>
            <th></th>
        </tr>
    </thead>
</table>

<div class="row mt-3">
    <div class="col-md-12">
        <button id="generateforms" class="btn btn-primary">Generate Forms</button>
    </div>
</div>


<div class="modal" id="generateModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg content" role="document" >
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <table id="generateAddItem" class="table table.sm table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>Thumbnail</th>
                                    <th>Item Code</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>In Stock</th>
                                    <th>R/O Level</th>
                                    <th>R/O Qty</th>
                                    <th>Unit of Measure</th>
                                    <th>Unit Price</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="thumbnail__regular"></div>
                        </div>
                        <div class="col-md-3">
                            <div  class="label">Item Number</div>
                            <div id="itemnumber" ></div>
                            <br />
                            <div class="label">In Stock</div>
                            <div id="instock"></div>
                        </div>
                        <div class="col-md-3" >
                            <div  class="label">Description</div>
                            <div id="description" ></div>
                            <br />
                            <div  class="label">Reorder Level</div>
                            <div id="reorderlevel"></div>
                        </div>
                        <div class="col-md-2">
                            <div class="label">Reorder Quantity</div>
                            <div id="reorderquantity"></div>
                            <br />
                            <div class="label">Unit of Measure</div>
                            <div id="uom"></div>

                        </div>
                        <div class="col-md-2">
                            <div  class="label">Category</div>
                            <div id="category" ></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div id="modalMsg"></div>
                <label>Qty</label>
                <input id="generateQty" class="inputText" type="number" min="1" />
                <label>x</label>
                <label>Unit Price</label>
                <input id="generateUnitPrice" class="inputText" type="text" disabled />
                <label>Amount</label>
                <input id="generateAmount" class="inputText" type="text" disabled />
                <button id="addToPOBtn" type="button" class="btn btn-primary">Add to Purchase Order</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
