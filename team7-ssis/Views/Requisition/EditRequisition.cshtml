@model team7_ssis.ViewModels.EditRequisitionViewModel

@section Scripts {
    <script src="~/Scripts/Custom/RedirectPost.js"></script>
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2>Edit Requisition</h2>
    </div>
    <div class="col-md-4">
        <button id="saveAsBtn" class="btn btn-default pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save as Draft</button>
    </div>
</div>

<div id="alert"></div>

<button id="addItemBtn" class="btn btn-default mb-3"><i class="fa fa-plus" aria-hidden="true"></i> Add Item</button>

<table id="myTable" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>Item Code</th>
            <th>Description</th>
            <th>Qty</th>
            <th></th>
        </tr>
    </thead>
</table>

<div class="row mt-3">
    <div class="col-md-12">
        <h3>Select Collection Point</h3>
        @*Bind input to List<CollectionPoint>*@
        <select class="custom-select">
            @foreach (var collectionPoint in Model.SelectCollectionPointList)
            {
                <option value="@collectionPoint.CollectionPointId">@collectionPoint.Name</option>
            }
        </select>

        <p>Once requisition in processed, you will receive an email on the pickup date. This will be the following Monday if the requisition was created by Wednesday.</p>
        <h3>Representative</h3>
        @Model.Representative
    </div>
</div>

<div class="row mt-3">

    @if (Model.Action == "Create")
    {
        <div class="col-md-12">
            <button id="cancelBtn" class="btn btn-default">Cancel</button>
            <button id="confirmBtn" class="btn btn-primary">Confirm</button>
        </div>
    }
    @if (Model.Action == "Edit")
    {
        <div class="col-md-8">
            <button id="backBtn" class="btn btn-default">Back</button>
            <button id="confirmChangeBtn" class="btn btn-success">Confirm Changes</button>
        </div>
        <div class="col-md-4">
            <button id="cancelReqBtn" class="btn btn-danger pull-right"><i class="fa fa-trash" aria-hidden="true"></i> Cancel Requisition</button>
        </div>
    }
</div>

<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <table id="addItemTable" class="table table.sm table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>Thumbnail</th>
                                    <th>Item Code</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>In Stock</th>
                                    <th>Unit of Measure</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="thumbnail__regular"></div>
                        </div>
                        <div class="col-md-3">
                            <div class="label">Item Number</div>
                            ALPA
                            <br />
                            <div class="label">In Stock</div>
                            20
                        </div>
                        <div class="col-md-4">
                            <div class="label">Description</div>
                            Clip Double 2"
                            <br />
                            <div class="label">Unit of Measure</div>
                            Dozen
                        </div>
                        <div class="col-md-3">
                            <div class="label">Category</div>
                            Clip
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div id="modalMsg"></div>
                <label>Qty</label>
                <input id="qtyInput" type="number" />
                <button id="addToReq" type="button" class="btn btn-primary">Add to Requisition</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function () {

    // render main table
    var myTable = $('#myTable').DataTable({
        ajax: {
            url: "/api/reqdetail/@Model.RequisitionId",
            dataSrc: ""
        },
        columns: [
            { data: "ItemCode" },
            { data: "Description" },
            { data: "Quantity" },
            { defaultContent: '<i class="fa fa-times pointer" aria-hidden="true"></i>' }
        ],
        select: "api"
    });

    // render Item table
    var addItemTable = $('#addItemTable').DataTable({
        ajax: {
            url: "/api/manage/items",
            dataSrc: ""
        },
        pageLength: 5,
        columns: [
            { "defaultContent": '<div class="thumbnail__small"></div>' },
            { "data": "ItemCode", "autoWidth": true },
            { "data": "ItemCategoryName", "autoWidth": true },
            { "data": "Description", "autoWidth": true },
            { "data": "Quantity", "autoWidth": true },
            { "data": "Uom", "autoWidth": true },
        ],
        select: "single"
    });

    // Display the Add Item modal
    $('#addItemBtn').click(function () {
        $('#myModal').modal({
            backdrop: 'static',
        });
    })

    // Add items to myTable
    $('#addToReq').click(function () {
        var data = $('#addItemTable').DataTable().rows({ selected: true }).data().toArray();
        //console.log(data);
        //TODO: write some logic that will add quantity to the requisitionDetail
        var qty = parseInt($('#qtyInput').val());

        if ((data.length > 0) && (qty > 0)) {
            myTable.row.add({ ItemCode: data[0].ItemCode, Description: data[0].Description, Quantity: qty }).draw();
            $('#myModal').modal('hide');
            $('#modalMsg').html('');
        } else {
            $('#modalMsg').html('You must select an item and a valid quantity.');
            console.log("Error");
        }

    })

    // Click "Cancel Requisition"
    $(document).on('click', '#cancelReqBtn', function () {
        post("/Requisition/Cancel", { rid: "@Model.RequisitionId" });
    });

    // Delete row
    $('#myTable tbody').on('click', 'i.fa.fa-times', function () {
        myTable
            .row($(this).parents('tr'))
            .remove()
            .draw();
    });

    // Click 'Confirm' button
    $('#confirmChangeBtn').click(function () {
        var tableData = myTable.rows().data().toArray();

        if (tableData.length > 0) {
            var data = { RequisitionId: "@Model.RequisitionId" , ItemList: [] };

            for (i = 0; i < tableData.length; i++) {
                data.ItemList[i] = { ItemCode: tableData[i].ItemCode, Qty: tableData[i].Quantity }
            }

            $.ajax({
                type: "POST",
                contentType: 'application/json',
                url: "/api/editrequisition",
                data: JSON.stringify(data),
                dataType: "json",
                success: function (rid) {
                    // redirect to ManageRetrieval with a msg
                    window.location.replace("/Requisition/ManageRequisitions?update=" + encodeURIComponent(rid));
                },
                error: function (msg) {
                    $('#alert').html(
                        '<div class="alert alert-danger" role="alert">' +
                        'An unexpected error occured.' +
                        '</div>'
                    );
                }
            });
        } else {
            $('#alert').html(
                '<div class="alert alert-danger" role="alert">' +
                'Please add some items to your Requisition.' +
                '</div>'
            );
        }
    })
})
</script>