@model team7_ssis.ViewModels.CreateRequisitionViewModel
@section Scripts {
    <script src="~/Scripts/Custom/CreateRequisition.js"></script>
}
@{
    ViewBag.Title = "Create Requisition";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2>Create Requisition</h2>
    </div>
    <div class="col-md-4">
        <button id="saveAsBtn" class="btn btn-default pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save as Draft</button>
    </div>
</div>

<div id="errorAlert" class="alert alert-danger" role="alert" hidden></div>

<button id="addItemBtn" class="btn btn-default mb-3"><i class="fa fa-plus" aria-hidden="true"></i> Add Item</button>

<table id="myTable" class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <th>Item Code</th>
            <th>Description</th>
            <th>Qty</th>
            <th></th>
        </tr>
    </thead>
</table>

<div class="row mt-3">
    <div class="col-md-12">
        <h3>Select Collection Point</h3>
        @*Bind input to List<CollectionPoint>*@
        <select class="custom-select">
            @foreach (var collectionPoint in Model.SelectCollectionPointList)
            {
                <option value="@collectionPoint.CollectionPointId">@collectionPoint.Name</option>
            }
        </select>

        <p>Once requisition in processed, you will receive an email on the pickup date. This will be the following Monday if the requisition was created by Wednesday.</p>
        <h3>Representative</h3>
        @Model.Representative
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <button id="cancelBtn" class="btn btn-default">Cancel</button>
        <button id="confirmBtn" class="btn btn-primary">Confirm</button>
    </div>
</div>

<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <table id="addItemTable" class="table table.sm table-striped table-bordered" style="width: 100%">
                            <thead>
                                <tr>
                                    <th>Thumbnail</th>
                                    <th>Item Code</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>In Stock</th>
                                    <th>Unit of Measure</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="thumbnail__regular"></div>
                        </div>
                        <div class="col-md-3">
                            <div class="label">Item Number</div>
                            ALPA
                            <br />
                            <div class="label">In Stock</div>
                            20
                        </div>
                        <div class="col-md-4">
                            <div class="label">Description</div>
                            Clip Double 2"
                            <br />
                            <div class="label">Unit of Measure</div>
                            Dozen
                        </div>
                        <div class="col-md-3">
                            <div class="label">Category</div>
                            Clip
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div id="modalMsg"></div>
                <label>Qty</label>
                <input id="qtyInput" type="number" />
                <button id="addToReq" type="button" class="btn btn-primary">Add to Requisition</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>